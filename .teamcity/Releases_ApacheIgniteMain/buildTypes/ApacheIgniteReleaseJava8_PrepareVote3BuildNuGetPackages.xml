<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="edb7449e-192e-4620-ac03-26e713291aae" xsi:noNamespaceSchemaLocation="https://www.jetbrains.com/teamcity/schemas/2021.1/project-config.xsd">
  <name>[3] Build &amp; Upload Nuget Staging Packages</name>
  <description>Pack NuGet from existing binaries</description>
  <settings>
    <options>
      <option name="artifactRules" value="**/*.nupkg" />
    </options>
    <parameters>
      <param name="VOTE_BUILD_NUM" value="" />
    </parameters>
    <build-runners>
      <runner id="RUNNER_123" name="Unzip artifacts to src and bin folders" type="jetbrains_powershell">
        <parameters>
          <param name="jetbrains_powershell_execution" value="PS1" />
          <param name="jetbrains_powershell_noprofile" value="true" />
          <param name="jetbrains_powershell_script_code"><![CDATA[Add-Type -AssemblyName System.IO.Compression.FileSystem
function Unzip
{
    param([string]$zipfile, [string]$outpath)

    [System.IO.Compression.ZipFile]::ExtractToDirectory($zipfile, $outpath)
}

$src = Get-ChildItem | Where-Object { $_.Name -match "apache-ignite-[0-9].*?-src.zip" }
$bin = Get-ChildItem | Where-Object { $_.Name -match "apache-ignite-[0-9].*?-bin.zip" }

echo $src
echo $bin

Unzip $src .
Unzip $bin .

rni (gi apache-ignite-*-src) src
rni (gi apache-ignite-*-bin) bin]]></param>
          <param name="jetbrains_powershell_script_mode" value="CODE" />
          <param name="teamcity.step.mode" value="default" />
        </parameters>
      </runner>
      <runner id="RUNNER_160" name="Pack NuGet" type="jetbrains_powershell">
        <parameters>
          <param name="jetbrains_powershell_execution" value="PS1" />
          <param name="jetbrains_powershell_noprofile" value="true" />
          <param name="jetbrains_powershell_scriptArguments" value="-skipJava -skipDotNet -skipDotNetCore -jarDirs ..\bin\libs -asmDirs ..\..\..\..\bin\platforms\dotnet\bin" />
          <param name="jetbrains_powershell_script_file" value="src\modules\platforms\dotnet\build.ps1" />
          <param name="jetbrains_powershell_script_mode" value="FILE" />
          <param name="teamcity.build.workingDir" value="src\modules\platforms\dotnet\" />
          <param name="teamcity.step.mode" value="default" />
        </parameters>
      </runner>
      <runner id="RUNNER_233" name="NuGet staging publish" type="jb.nuget.publish">
        <parameters>
          <param name="nuget.path" value="%teamcity.tool.NuGet.CommandLine.DEFAULT%" />
          <param name="nuget.publish.files" value="**/*.nupkg" />
          <param name="nuget.publish.source" value="https://www.myget.org/F/apache-ignite-staging/" />
          <param name="secure:nuget.api.key" value="credentialsJSON:8bf475af-b46f-48a2-a03f-d9c414b2ea06" />
          <param name="teamcity.step.mode" value="default" />
        </parameters>
      </runner>
      <runner id="RUNNER_13" name="Run NuGet verification script" type="jetbrains_powershell">
        <parameters>
          <param name="jetbrains_powershell_execution" value="PS1" />
          <param name="jetbrains_powershell_noprofile" value="true" />
          <param name="jetbrains_powershell_script_code"><![CDATA[if (Test-Path release/verify-nuget.ps1) {
  ./release/verify-nuget.ps1
}]]></param>
          <param name="jetbrains_powershell_script_mode" value="CODE" />
          <param name="teamcity.build.workingDir" value="src/modules/platforms/dotnet" />
          <param name="teamcity.step.mode" value="default" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings />
    <requirements>
      <contains id="RQ_2" name="env.OS" value="Windows" />
    </requirements>
    <build-triggers />
    <artifact-dependencies>
      <dependency id="ARTIFACT_DEPENDENCY_101" sourceBuildTypeId="Releases_ApacheIgniteMain_ReleaseBuild" cleanDestination="true">
        <revisionRule name="buildNumber" revision="%VOTE_BUILD_NUM%" />
        <artifact sourcePath="release*.zip!svn/vote/apache-ignite-*-src.zip&#xD;&#xA;release*.zip!svn/vote/apache-ignite-*-bin.zip" />
      </dependency>
    </artifact-dependencies>
    <cleanup />
  </settings>
</build-type>

