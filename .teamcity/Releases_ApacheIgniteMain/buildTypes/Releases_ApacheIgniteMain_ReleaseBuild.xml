      <runner id="RUNNER_216" name="Git setup" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[#!/usr/bin/env bash
set -x


# Ignore chmod
git config core.filemode false

# Set user / mail
git config --global user.name "Ignite Teamcity"
git config --global user.email ignite@apache.org

# Fix URL in .git/config
sed -i -r -e 's|^\[url.*||' \
          -e 's|.*nsteadOf.*||' \
          -e '/^$/d' \
    .git/config]]></param>
