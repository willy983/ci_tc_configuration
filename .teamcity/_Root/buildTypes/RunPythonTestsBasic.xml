<?xml version="1.0" encoding="UTF-8"?>
<template xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="f980065f-2809-4bd0-9648-147169607b70" xsi:noNamespaceSchemaLocation="https://www.jetbrains.com/teamcity/schemas/2021.1/project-config.xsd">
  <name>Run Python tests (Basic)</name>
  <description>Runs Python tests</description>
  <settings>
    <parameters>
      <param name="VCS_ROOT_PYTHON" value="ignite-python-thin-client" spec="text display='hidden' validationMode='any'" />
      <param name="env.PYTHON_TEST_CONFIG_PATH" value="%system.teamcity.build.checkoutDir%/%VCS_ROOT_PYTHON%/tests/config" spec="text display='hidden' validationMode='any'" />
    </parameters>
    <build-runners>
      <runner id="RUNNER_90" name="Run Python tests" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[#!/usr/bin/env bash
set -o nounset; set -o errexit; set -o pipefail; set -o errtrace; set -o functrace
set -x


# Run tests
python3 ./setup.py pytest || exit 1]]></param>
          <param name="teamcity.build.workingDir" value="%VCS_ROOT_PYTHON%" />
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings />
    <requirements />
    <build-triggers />
    <cleanup />
  </settings>
</template>

