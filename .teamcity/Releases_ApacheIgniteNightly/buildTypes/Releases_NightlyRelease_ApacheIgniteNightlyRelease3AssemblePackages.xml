<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="15e3cdc4-ba0e-4646-b3f6-739eeee405ca" xsi:noNamespaceSchemaLocation="https://www.jetbrains.com/teamcity/schemas/2021.1/project-config.xsd">
  <name>[APACHE IGNITE NIGHTLY RELEASE] #3 :: Assemble Linux Packages</name>
  <description />
  <settings>
    <options>
      <option name="artifactRules" value="packaging/*.rpm&#xA;packaging/*.deb" />
    </options>
    <parameters>
      <param name="IGNITE_VERSION" value="%dep.Releases_NightlyRelease_ApacheIgniteNightlyReleasePrepare.IGNITE_VERSION%" spec="text display='hidden' validationMode='any'" />
    </parameters>
    <build-runners>
      <runner id="RUNNER_268" name="" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[#!/usr/bin/env bash
set -x

#
# Build packages
#
packaging/package.sh --rpm --deb]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="GitHubApacheIgnite" />
    </vcs-settings>
    <requirements>
      <equals id="RQ_49" name="teamcity.agent.jvm.os.name" value="Linux" />
    </requirements>
    <build-triggers />
    <artifact-dependencies>
      <dependency id="ARTIFACT_DEPENDENCY_110" sourceBuildTypeId="Releases_NightlyRelease_ApacheIgniteNightlyReleasePrepare" cleanDestination="false">
        <revisionRule name="sameChainOrLastFinished" revision="latest.sameChainOrLastFinished" />
        <artifact sourcePath="apache-ignite-%IGNITE_VERSION%-src.zip!** =&gt; ." />
      </dependency>
      <dependency id="ARTIFACT_DEPENDENCY_111" sourceBuildTypeId="Releases_NightlyRelease_ApacheIgniteNightlyReleaseAssembleBinaries" cleanDestination="false">
        <revisionRule name="sameChainOrLastFinished" revision="latest.sameChainOrLastFinished" />
        <artifact sourcePath="apache-ignite-%IGNITE_VERSION%-bin.zip =&gt; packaging" />
      </dependency>
    </artifact-dependencies>
    <dependencies>
      <depend-on sourceBuildTypeId="Releases_NightlyRelease_ApacheIgniteNightlyReleasePrepare">
        <options>
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
      <depend-on sourceBuildTypeId="Releases_NightlyRelease_ApacheIgniteNightlyReleaseAssembleBinaries">
        <options>
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
    </dependencies>
    <cleanup />
  </settings>
</build-type>

